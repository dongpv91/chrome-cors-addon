{
    "name": "スマリザアドオン",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "GMOスマートリザーブで他サービスの管理画面と連携するためのアドオン",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "スマリザアドオン"
    }
}